{
  "$id": "",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JSON Schema para o arquivo de validação do .env",
  "type": ["object"],
  "properties": {
    "atributos": {
      "type": ["array"],
      "items": {
        "type": ["object"],
        "properties": {
          "nome": {
            "type": "string"
          },
          "valorPadrao": {
            "type": ["string", "integer", "number", "boolean"]
          },
          "tipo": {
            "description": "Define qual será o tipo da variável",
            "enum": ["Long", "Double", "String", "Boolean"],
            "type": ["string"]
          },
          "required": ["nome", "tipo"]
        }
      }
    }
  },
  "required": ["variaveis"]
}
